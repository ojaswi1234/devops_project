<!DOCTYPE html>
<html>
  <head>
    <title>Server Health Monitoring - Login</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'SF Pro Text', 'Segoe UI', system-ui, sans-serif;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background: linear-gradient(160deg, #f1f5f9 0%, #e2e8f0 50%, #cbd5e1 100%);
        color: #1e293b;
        padding: 20px;
        line-height: 1.6;
        letter-spacing: -0.011em;
      }
      
      .container {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        padding: 48px;
        border-radius: 24px;
        box-shadow: 0 8px 32px rgba(15, 23, 42, 0.08), 0 2px 8px rgba(15, 23, 42, 0.04);
        border: 1px solid rgba(255, 255, 255, 0.4);
        max-width: 540px;
        width: 100%;
        color: #334155;
      }

      h1 {
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        text-align: center;
        color: #0f172a;
        letter-spacing: -0.025em;
        line-height: 1.2;
      }
      
      .subtitle {
        font-size: 0.9375rem;
        font-weight: 400;
        margin-bottom: 2rem;
        text-align: center;
        color: #64748b;
        letter-spacing: -0.006em;
      }

      .upload-section {
        margin-bottom: 2rem;
      }

      .upload-section h2 {
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 1rem;
        color: #1e293b;
        letter-spacing: -0.017em;
      }

      .file-upload-area {
        border: 2px dashed rgba(99, 102, 241, 0.25);
        border-radius: 16px;
        padding: 36px;
        text-align: center;
        background: linear-gradient(to bottom, #fafbfc, #f8fafc);
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        margin-bottom: 1rem;
      }

      .file-upload-area:hover {
        background: linear-gradient(to bottom, #f8fafc, #f1f5f9);
        border-color: rgba(99, 102, 241, 0.4);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.08);
      }

      .file-upload-area.dragover {
        background: linear-gradient(to bottom, #eef2ff, #e0e7ff);
        border-color: rgba(99, 102, 241, 0.6);
        transform: scale(1.01);
        box-shadow: 0 8px 24px rgba(99, 102, 241, 0.15);
      }

      .file-upload-area svg {
        width: 48px;
        height: 48px;
        margin-bottom: 1rem;
        stroke: #6366f1;
        fill: none;
        stroke-width: 1.5;
        stroke-linecap: round;
        stroke-linejoin: round;
      }

      .file-upload-area p {
        font-size: 0.9375rem;
        color: #475569;
        letter-spacing: -0.006em;
      }

      .file-upload-area p strong {
        color: #1e293b;
        font-weight: 600;
      }

      .file-name {
        margin-top: 1rem;
        font-weight: 500;
        font-size: 0.875rem;
        color: #059669;
        min-height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 6px;
      }

      .file-name svg {
        width: 16px;
        height: 16px;
        stroke: currentColor;
        stroke-width: 2;
      }

      input[type="file"] {
        display: none;
      }

      .btn {
        width: 100%;
        padding: 14px 20px;
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.9375rem;
        cursor: pointer;
        transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px rgba(99, 102, 241, 0.25);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        letter-spacing: -0.006em;
      }

      .btn svg {
        width: 18px;
        height: 18px;
        stroke: currentColor;
        fill: none;
        stroke-width: 2;
        stroke-linecap: round;
        stroke-linejoin: round;
      }

      .btn:hover:not(:disabled) {
        transform: translateY(-1px);
        box-shadow: 0 4px 16px rgba(99, 102, 241, 0.35), 0 2px 8px rgba(99, 102, 241, 0.2);
        background: linear-gradient(135deg, #5558eb 0%, #4338ca 100%);
      }

      .btn:disabled {
        background: linear-gradient(135deg, #cbd5e1 0%, #94a3b8 100%);
        cursor: not-allowed;
        transform: none;
        box-shadow: none;
      }

      .btn-secondary {
        background: transparent;
        border: 1.5px solid rgba(99, 102, 241, 0.3);
        color: #6366f1;
        box-shadow: none;
      }

      .btn-secondary:hover {
        background: #eef2ff;
        border-color: rgba(99, 102, 241, 0.4);
        box-shadow: 0 2px 8px rgba(99, 102, 241, 0.12);
      }

      .divider {
        text-align: center;
        margin: 2rem 0;
        position: relative;
      }

      .divider::before {
        content: '';
        position: absolute;
        left: 0;
        top: 50%;
        width: 100%;
        height: 1px;
        background: linear-gradient(90deg, transparent, #e2e8f0 20%, #e2e8f0 80%, transparent);
      }

      .divider span {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(8px);
        padding: 0 16px;
        position: relative;
        color: #94a3b8;
        font-size: 0.875rem;
        font-weight: 500;
        letter-spacing: 0.025em;
      }

      .info-box {
        background: linear-gradient(to bottom right, #fffbeb, #fef3c7);
        border: 1px solid rgba(251, 191, 36, 0.2);
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
        color: #92400e;
        box-shadow: 0 2px 8px rgba(245, 158, 11, 0.08);
        display: flex;
        align-items: flex-start;
        gap: 12px;
      }

      .info-box svg {
        width: 20px;
        height: 20px;
        stroke: #d97706;
        flex-shrink: 0;
        stroke-width: 2;
        fill: none;
        stroke-linecap: round;
        stroke-linejoin: round;
        margin-top: 2px;
      }

      .info-box strong {
        display: block;
        margin-bottom: 0.375rem;
        color: #78350f;
        font-weight: 600;
      }

      .error-box {
        background: linear-gradient(to bottom right, #fef2f2, #fee2e2);
        border: 1px solid rgba(239, 68, 68, 0.2);
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 1.5rem;
        color: #991b1b;
        font-size: 0.875rem;
        box-shadow: 0 2px 8px rgba(220, 38, 38, 0.08);
        display: flex;
        align-items: flex-start;
        gap: 12px;
      }

      .error-box svg {
        width: 20px;
        height: 20px;
        stroke: #dc2626;
        flex-shrink: 0;
        stroke-width: 2;
        fill: none;
        stroke-linecap: round;
        stroke-linejoin: round;
        margin-top: 2px;
      }

      .requirements {
        background: linear-gradient(to bottom right, #eff6ff, #dbeafe);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 12px;
        padding: 16px;
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
        color: #1e40af;
        box-shadow: 0 2px 8px rgba(59, 130, 246, 0.08);
      }

      .requirements strong {
        display: block;
        margin-bottom: 0.5rem;
        color: #1e3a8a;
        font-weight: 600;
      }

      .requirements ul {
        margin: 0.5rem 0 0 1.5rem;
      }

      .requirements li {
        margin-bottom: 0.375rem;
        color: #1e40af;
      }

      .requirements code {
        background: rgba(255, 255, 255, 0.6);
        padding: 2px 6px;
        border-radius: 4px;
        font-family: 'SF Mono', 'Monaco', 'Consolas', monospace;
        font-size: 0.8125rem;
        color: #0c4a6e;
        font-weight: 500;
      }

      .note {
        text-align: center;
        font-size: 0.8125rem;
        color: #64748b;
        margin-top: 1.5rem;
        line-height: 1.5;
      }

      @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-12px); }
        to { opacity: 1; transform: translateY(0); }
      }

      .container {
        animation: fadeIn 0.6s cubic-bezier(0.16, 1, 0.3, 1);
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>DevOps Dashboard</h1>
      <p class="subtitle">Server Health Monitoring & CI/CD Deployment</p>
      
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-box">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/></svg>
          <div>
            <% if (error === 'upload_required') { %>
              Please upload your .env file or use guest mode to continue.
            <% } else if (error === 'no_file') { %>
              No file selected. Please choose a .env file to upload.
            <% } else if (error === 'invalid_env') { %>
              Invalid .env file. Make sure it contains MONGO_URI and API_KEY.
            <% } else if (error === 'db_connection_failed') { %>
              Failed to connect to MongoDB. Check your MONGO_URI in the .env file.
            <% } else if (error === 'upload_failed') { %>
              Upload failed. Please try again.
            <% } else if (error === 'guest_mode_failed') { %>
              Failed to start guest mode. Please try again.
            <% } %>
          </div>
        </div>
      <% } %>

      <div class="info-box">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
        <div>
          <strong>Secure Credential Handling</strong>
          Your .env file is processed in-memory only and never saved to disk. Credentials are stored in your session and expire after 30 minutes of inactivity.
        </div>
      </div>

      <div class="upload-section">
        <h2>Upload Your Environment File</h2>
        
        <div class="requirements">
          <strong>Required fields in your .env file:</strong>
          <ul>
            <li><code>MONGO_URI</code> - MongoDB connection string</li>
            <li><code>API_KEY</code> - API authentication key</li>
            <li><code>RENDER_API_KEY</code> (optional) - For Render deployments</li>
            <li><code>PORT</code> (optional) - Server port (default: 3000)</li>
          </ul>
        </div>

        <form id="uploadForm" action="/upload-env" method="POST" enctype="multipart/form-data">
          <div class="file-upload-area" id="dropArea">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/><polyline points="7 10 12 15 17 10"/><line x1="12" y1="15" x2="12" y2="3"/></svg>
            <p><strong>Click to browse</strong> or drag and drop your .env file here</p>
            <p style="font-size: 0.85rem; color: #94a3b8; margin-top: 0.5rem;">Accepted: .env files only</p>
            <div class="file-name" id="fileName"></div>
          </div>
          <input type="file" id="fileInput" name="envFile" accept=".env" required>
          <button type="submit" class="btn" id="uploadBtn" disabled>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><polyline points="10 17 15 12 10 7"/><line x1="15" y1="12" x2="3" y2="12"/></svg>
            Upload & Authenticate
          </button>
        </form>
      </div>

      <div class="divider"><span>OR</span></div>

      <form action="/guest-mode" method="POST">
        <button type="submit" class="btn btn-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          Continue as Guest
        </button>
      </form>

      <p class="note">
        Guest mode provides read-only access with sample data
      </p>
    </div>

    <script>
      const dropArea = document.getElementById('dropArea');
      const fileInput = document.getElementById('fileInput');
      const fileName = document.getElementById('fileName');
      const uploadBtn = document.getElementById('uploadBtn');

      // Click to upload
      dropArea.addEventListener('click', () => {
        fileInput.click();
      });

      // File selection
      fileInput.addEventListener('change', (e) => {
        handleFiles(e.target.files);
      });

      // Drag and drop
      ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
        dropArea.addEventListener(eventName, preventDefaults, false);
      });

      function preventDefaults(e) {
        e.preventDefault();
        e.stopPropagation();
      }

      ['dragenter', 'dragover'].forEach(eventName => {
        dropArea.addEventListener(eventName, () => {
          dropArea.classList.add('dragover');
        }, false);
      });

      ['dragleave', 'drop'].forEach(eventName => {
        dropArea.addEventListener(eventName, () => {
          dropArea.classList.remove('dragover');
        }, false);
      });

      dropArea.addEventListener('drop', (e) => {
        const dt = e.dataTransfer;
        const files = dt.files;
        fileInput.files = files;
        handleFiles(files);
      }, false);

      function handleFiles(files) {
        if (files.length > 0) {
          const file = files[0];
          if (file.name.endsWith('.env') || file.name === '.env') {
            fileName.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polyline points="20 6 9 17 4 12"/></svg> Selected: ${file.name}`;
            uploadBtn.disabled = false;
          } else {
            fileName.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><circle cx="12" cy="12" r="10"/><line x1="15" y1="9" x2="9" y2="15"/><line x1="9" y1="9" x2="15" y2="15"/></svg> Please select a .env file';
            fileName.style.color = '#dc2626';
            uploadBtn.disabled = true;
          }
        }
      }
    </script>
  </body>
</html>
