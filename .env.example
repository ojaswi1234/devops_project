# MongoDB Connection (Required for authenticated mode)
MONGO_URI=mongodb://localhost:27017/devops_prod

# API Key for authentication (Required)
API_KEY=your-secure-api-key-here

# Render API Key (Optional - for Render integration)
RENDER_API_KEY=

# Application Port (Optional - defaults to 3000)
PORT=3000

# Session Configuration (Optional but REQUIRED for production)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=

# MongoDB URI for session storage (Optional but REQUIRED for production)
# Using a separate database for sessions is recommended
SESSION_MONGO_URI=mongodb://localhost:27017/devops_sessions

# Node Environment (Optional - set to 'production' for production deployments)
NODE_ENV=development
